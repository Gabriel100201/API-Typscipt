{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/types/**/*.d.ts",
    "src/types/**/*.ts"
, "src/controllers/excepciones.controller.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
}
